@model Entities.Post

@{
    ViewData["Title"] = @Model.Name;
}

<h1>@Model.Name</h1>

<div class="container">
    <div class="row text-center">

        <div class="col-lg-4">
            <img src="/Img/@Model.Image" alt="@Model.Name" class="bd-placeholder-img rounded-circle" width="400" height="400" />
            <h2></h2>

        </div>

        <div class="col-lg-8">
            <p>@Model.Content</p>
        </div>

    </div>
</div>
