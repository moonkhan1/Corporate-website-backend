@model Entities.Category

@{
    ViewData["Title"] = "Kateqoriyanı redaktə et";
}

<h4>Kateqoriyanı redaktə et</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Image" /> <!--Save zamanı şəkil dəyişdirilməzsə köhnə şəkli qorumamızı təmin edir-->
            <div class="form-group">
                <label asp-for="ParentId" class="control-label"></label>
                <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId"><option value="0">Əsas Kateqoriya</option></select>
                <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" type="file"/>
                <span asp-validation-for="Image" class="text-danger"></span>
                @{
                    if (Model.Image != null && !string.IsNullOrWhiteSpace(Model.Image))
                    {
                        <img src="/Img/@Model.Image" alt="" height="100" />
                        <div>@Html.CheckBox("cbSekliSil") Şəkili sil </div>
                    }
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-outline-primary">Siyahıya qayıt</a>
</div>

